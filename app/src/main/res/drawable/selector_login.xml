<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E45252" />
            <stroke android:width="1px" android:color="#783034" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item >
        <shape>
            <solid android:color="#CC4240" />
            <stroke android:width="1px" android:color="#783034" />
            <corners android:radius="6dp" />
            <gradient android:angle="270" android:startColor="#E45252" android:endColor="#CC4242" />
        </shape>
    </item>

</selector>