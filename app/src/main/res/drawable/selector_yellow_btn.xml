<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1px" android:color="#C2923D" />
            <corners android:radius="30dp" />
            <solid android:color="#FFA101" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="1px" android:color="#C2923D" />
            <corners android:radius="30dp" />
            <gradient android:angle="270" android:endColor="#E57231" android:startColor="#FFA101" />
        </shape>
    </item>


</selector>